<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %><select name="playerlist">
        <% @players.each do |player| %>
        <option value="<%= player.id%>"> <%= player.name %> <%= player.homeruns %> </option>
      <% end %>
      </select>

        </td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
  <% @players.each do |player| %>
<li> <%= player.name %> <%= player.homeruns %> </li>
<% end %>
</ul>

<%= link_to 'New Team', new_team_path %>
